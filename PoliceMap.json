{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "The Data files on the Law and Order index were scrapped from a PDF report from 2022 from Gallup and both cleaned and seperated into respective tables using google Colab. The other dataset was sourced through Wikipedia and Statista to fill in the gaps for countries Statista didn't contain.",


    "background": null,
    "config": {
        "view": {
           "stroke": "transparent"
        }
      },

      "title": {
        "text": "Rating Police Presence and Quality across Europe",
        "subtitle": ["Based on the Law and Order Index and Police officer population density of a country.",
        "Tooltip includes the Law and Order Index Value (How satisfied the population are with the Law Enforcement of their country /100)",
         "Data sources: Gallup, Statistsa, Wikepedia, githubusercontent.com/deldersveld",
         ""],
        "subtitleFontStyle": "italic",
        "fontSize":16,
        "subtitleFontSize": 12,
        "anchor": "start",
        "color": "indianred"
      },
  
      "width": 800,
      "height": 500,
    "data": {
      "name": "world",
      "url": "https://raw.githubusercontent.com/deldersveld/topojson/master/continents/europe.json",
      "format": {"type": "topojson", "feature": "continent_Europe_subunits"}
    },
    "transform": [
      {
        "lookup": "properties.geounit",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/aarontyler1/aarontyler1.github.io/main/LawOrderScrapper.csv"
          },
          "key": "Country",
          "fields": ["Index", "Police Officers per 100,000"]
        }
      }
    ],
    "projection": {"type": "equalEarth"},
    "mark": "geoshape",
    "encoding": {
      "color": {"field": "Police Officers per 100,000", "title": ["Officers per 100,000", "Residents"], "type": "quantitative", "scale": {"scheme": "yelloworangered"}},
      "tooltip": [
        {"field": "properties.geounit", "type": "nominal", "title": "Country"},
        {"field": "Police Officers per 100,000", "type": "quantitative", "title": "Police Officers/100,000", "format": ".1f"},
        {"field": "Index", "type": "quantitative","title": "Law and Order Index"}
      ]
    }
  }